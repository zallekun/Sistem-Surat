<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Livewire create form loaded');
});

window.addEventListener('show-submit-confirmation', event => {
    console.log('Showing confirmation dialog');
    
    if (typeof Swal !== 'undefined') {
        Swal.fire({
            title: 'Konfirmasi Pengiriman',
            text: 'Apakah Anda yakin ingin mengirim surat ini ke Kaprodi untuk review? Surat yang sudah dikirim tidak dapat diedit kembali.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#2563eb',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Ya, Kirim!',
            cancelButtonText: 'Batal'
        }).then((result) => {
            if (result.isConfirmed) {
                @this.submitForReview();
            }
        });
    } else {
        if (confirm('Apakah Anda yakin ingin mengirim surat ini ke Kaprodi untuk review?')) {
            @this.submitForReview();
        }
    }
});
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<?php
namespace App\Http\Middleware;

use Closure;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;

class CheckJabatan
{
    public function handle(Request $request, Closure $next, ...$jabatans)
    {
        if (!Auth::check()) {
            return redirect('login');
        }

        $user = Auth::user();

        // Admin bypass all jabatan checks
        if ($user->role && $user->role->nama_role === 'admin') {
            return $next($request);
        }

        $userJabatan = $user->jabatan?->nama_jabatan;
        
        if (!$userJabatan || !in_array($userJabatan, $jabatans)) {
            abort(403, 'Unauthorized: Jabatan Anda tidak memiliki akses ke halaman ini.');
        }

        return $next($request);
    }
}
